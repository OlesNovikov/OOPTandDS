        <Button Name="DeleteButton" Content="Delete" HorizontalAlignment="Left" Height="25" Margin="151,293,0,0" VerticalAlignment="Top" Width="98" Click="DeleteButton_Click"/>
        <StackPanel Name="ShapeProperties" Margin="465,70,10,10" Visibility="Hidden"/>
